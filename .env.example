# Payment Security Enhancement Configuration

# API Keys (comma-separated list of valid API keys)
VALID_API_KEYS=test-api-key-1,test-api-key-2,prod-api-key-xyz

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting Configuration (optional - defaults are set in code)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Security Configuration
HTTPS_ONLY=false  # Set to 'true' for production environment
SECURE_COOKIES=false  # Set to 'true' for production environment
HSTS_MAX_AGE=31536000  # HSTS max age in seconds

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_IPS=  # Comma-separated list of allowed IP addresses (empty = allow all)

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxx_your_real_publishable_key_here
STRIPE_SECRET_KEY=sk_test_51xxxxx_your_real_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Real Transaction Mode (set to true for real Stripe API calls)
ENABLE_REAL_TRANSACTIONS=false

# Redis Configuration (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=defaultpassword

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error
AUDIT_LOG_ENABLED=true
LOG_RETENTION_DAYS=90
LOG_FILE_PATH=./logs/app.log

# Security Headers
SECURITY_HEADERS=true
CSP_POLICY=default-src 'self'; script-src 'self' js.stripe.com; style-src 'self' 'unsafe-inline'

# Monitoring and Health Check
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Docker Configuration
DOCKER_ENV=false  # Set to 'true' when running in Docker